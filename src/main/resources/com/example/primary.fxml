<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ui.PrimaryController"
            styleClass="app-root">

    <center>
        <SplitPane fx:id="rootSplit" dividerPositions="0.28">

            <!-- LINKS: LISTEN (darf nicht "zusammenfallen") -->
            <VBox fx:id="listsPane"
                  spacing="10.0"
                  prefWidth="260.0"
                  minWidth="220.0"
                  maxWidth="320.0">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <Label text="Listen"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <VBox spacing="6.0"
                      styleClass="category-container"
                      VBox.vgrow="ALWAYS"
                      minWidth="0">

                    <ListView fx:id="listsView"
                              VBox.vgrow="ALWAYS"
                              minWidth="0"/>

                    <Button text="+ Neue Liste"
                            onAction="#onNewList"
                            maxWidth="Infinity"
                            styleClass="category-add-full-btn"/>
                </VBox>
            </VBox>

            <!-- RECHTS: AUFGABEN -->
            <VBox spacing="10.0"
                  minWidth="320.0">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <HBox spacing="8.0" alignment="CENTER_LEFT" minWidth="0">
                    <!-- NEU: Listen-Dropdown-Button (nur bei schmaler Ansicht sichtbar) -->
                    <Button fx:id="btnListMenu"
                            text="Listen"
                            visible="false"
                            managed="false"/>

                    <Label fx:id="tasksTitleLabel"
                        text="Aufgaben"
                        style="-fx-font-size: 16px; -fx-font-weight: bold;"
                        minWidth="0"
                        maxWidth="Infinity"
                        HBox.hgrow="ALWAYS"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <ToggleButton fx:id="tglTheme" text="Dim"/>
                </HBox>


                <!-- Container Tasks + Details -->
                <VBox spacing="6.0"
                      styleClass="tasks-container"
                      VBox.vgrow="ALWAYS"
                      minWidth="0">

                    <HBox fx:id="tasksAndDetailsContainer"
                          spacing="12.0"
                          VBox.vgrow="ALWAYS"
                          minWidth="0">

                        <ListView fx:id="tasksView"
                                  styleClass="tasks-view"
                                  HBox.hgrow="ALWAYS"
                                  minWidth="0"/>

                        <!-- DETAILS (nimmt Platz nur wenn sichtbar/managed) -->
                        <VBox fx:id="detailsPane"
                              spacing="10.0"
                              visible="false"
                              managed="false"
                              minWidth="260.0"
                              prefWidth="360.0"
                              maxWidth="Infinity"
                              styleClass="details-pane">
                            <padding>
                                <Insets top="12" right="12" bottom="12" left="12"/>
                            </padding>

                            <HBox spacing="8.0" alignment="CENTER_LEFT">
                                <Label text="Details"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="✕" onAction="#onCloseDetails"/>
                            </HBox>

                            <Separator/>

                            <Label text="To Do"/>
                            <TextField fx:id="detailsTitle"
                                       promptText="Titel"
                                       maxWidth="Infinity"
                                       styleClass="details-input"/>

                            <Label text="Fälligkeit"/>
                            <DatePicker fx:id="detailsDueDate"
                                        maxWidth="Infinity"
                                        styleClass="details-input"/>

                            <Label text="Notizen"/>
                            <TextArea fx:id="detailsNotes"
                                      promptText="Notizen..."
                                      wrapText="true"
                                      prefRowCount="6"
                                      VBox.vgrow="ALWAYS"
                                      maxWidth="Infinity"
                                      styleClass="details-notes"/>

                            <HBox spacing="8.0">
                                <Button text="Datum entfernen"
                                        onAction="#onClearDetailsDueDate"
                                        HBox.hgrow="ALWAYS"
                                        maxWidth="Infinity"/>

                                <Button text="Speichern"
                                        onAction="#onSaveDetails"
                                        HBox.hgrow="ALWAYS"
                                        maxWidth="Infinity"/>
                            </HBox>
                        </VBox>

                    </HBox>

                    <!-- Footer -->
                    <HBox spacing="8.0" minWidth="0">
                        <Button fx:id="btnShowDone"
                                text="› Erledigt"
                                onAction="#onShowHistory"
                                HBox.hgrow="ALWAYS"
                                maxWidth="Infinity"
                                styleClass="tasks-footer-btn"/>

                        <Button fx:id="btnBack"
                                text="‹ Zurück"
                                onAction="#onBackFromHistory"
                                HBox.hgrow="ALWAYS"
                                maxWidth="Infinity"
                                styleClass="tasks-footer-btn"/>

                        <Button fx:id="btnClearDone"
                                text="Alle erledigten löschen"
                                onAction="#onClearDone"
                                HBox.hgrow="ALWAYS"
                                maxWidth="Infinity"
                                styleClass="tasks-footer-btn"/>
                    </HBox>

                </VBox>

                <!-- Eingabezeile -->
                <HBox spacing="0.0"
                      styleClass="todo-input"
                      minWidth="0">
                    <padding>
                        <Insets top="6" right="6" bottom="6" left="6"/>
                    </padding>

                    <Button text="+"
                            onAction="#onAddTask"
                            styleClass="todo-input-btn"/>

                    <TextField fx:id="txtNewTaskTitle"
                               promptText="Neue Aufgabe..."
                               HBox.hgrow="ALWAYS"
                               minWidth="0"
                               styleClass="todo-input-field"/>

                    <DatePicker fx:id="dpNewTaskDueDate"
                                styleClass="todo-input-date"
                                prefWidth="110"
                                minWidth="110"
                                maxWidth="110"/>
                </HBox>

            </VBox>

        </SplitPane>
    </center>

</BorderPane>
