<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ui.PrimaryController"
            stylesheets="@style.css">


    <center>
        <SplitPane dividerPositions="0.28">

            <!-- LINKS: LISTEN -->
            <VBox spacing="10.0">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <Label text="Listen"/>

                <!-- Weisser Container: Kategorien + Plus unten (Plus volle Breite) -->
                <VBox spacing="6.0"
                      styleClass="category-container"
                      VBox.vgrow="ALWAYS">

                    <ListView fx:id="listsView" VBox.vgrow="ALWAYS"/>

                    <!-- Plus-Button: immer volle Breite der Spalte -->
                    <Button text="+ Neue Liste"
                            onAction="#onNewList"
                            maxWidth="Infinity"
                            styleClass="category-add-full"/>
                </VBox>
            </VBox>

            <!-- RECHTS: AUFGABEN -->
            <VBox spacing="10.0">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <HBox spacing="8.0">
                    <Label text="Aufgaben"/>
                    <HBox HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Weisser Container: Tasks + Footer (2 Buttons) -->
                <VBox spacing="6.0"
                    styleClass="tasks-container"
                    VBox.vgrow="ALWAYS">

                    <ListView fx:id="tasksView" styleClass="tasks-view" VBox.vgrow="ALWAYS"/>

                    <!-- Footer: Zurueck + Alle erledigten loeschen -->
                    <HBox spacing="8.0">
                    <Button fx:id="btnShowDone"
                            text="› Erledigt"
                            onAction="#onShowHistory"
                            maxWidth="Infinity"
                            HBox.hgrow="ALWAYS"
                            styleClass="tasks-footer-btn"/>

                    <Button fx:id="btnBack"
                            text="‹ Zurück"
                            onAction="#onBackFromHistory"
                            maxWidth="Infinity"
                            HBox.hgrow="ALWAYS"
                            styleClass="tasks-footer-btn"/>

                    <Button fx:id="btnClearDone"
                            text="Alle erledigten löschen"
                            onAction="#onClearDone"
                            maxWidth="Infinity"
                            HBox.hgrow="ALWAYS"
                            styleClass="tasks-footer-btn-danger"/>
                    </HBox>

                </VBox>


                <!-- Eingabezeile (verschmolzen) -->
                <HBox spacing="0.0" styleClass="todo-input">
                    <padding>
                        <Insets top="6" right="6" bottom="6" left="6"/>
                    </padding>

                    <Button text="+" onAction="#onAddTask" styleClass="todo-input-btn"/>

                    <TextField fx:id="txtNewTaskTitle"
                            promptText="Neue Aufgabe..."
                            HBox.hgrow="ALWAYS"
                            styleClass="todo-input-field"/>

                    <DatePicker fx:id="dpNewTaskDueDate"
                                styleClass="todo-input-date"/>
                </HBox>

            </VBox>


        </SplitPane>
    </center>

</BorderPane>
