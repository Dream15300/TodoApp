<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ui.PrimaryController"
            stylesheets="@style.css">

    <center>
        <SplitPane dividerPositions="0.28">

            <!-- LINKS: LISTEN (fixe Breite, damit konstant) -->
            <VBox fx:id="listsPane"
                  spacing="10.0"
                  prefWidth="260.0"
                  minWidth="260.0"
                  maxWidth="260.0">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <Label text="Listen"/>

                <VBox spacing="6.0"
                      styleClass="category-container"
                      VBox.vgrow="ALWAYS">

                    <ListView fx:id="listsView" VBox.vgrow="ALWAYS"/>

                    <Button text="+ Neue Liste"
                            onAction="#onNewList"
                            maxWidth="Infinity"
                            styleClass="category-add-full"/>
                </VBox>
            </VBox>

            <!-- RECHTS: AUFGABEN -->
            <VBox spacing="10.0">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <HBox spacing="8.0">
                    <Label text="Aufgaben"/>
                    <HBox HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Weisser Container -->
                <VBox spacing="6.0"
                      styleClass="tasks-container"
                      VBox.vgrow="ALWAYS">

                    <!-- Tasks + Details (nur innerhalb dieses Containers) -->
                    <HBox spacing="12.0" VBox.vgrow="ALWAYS">

                        <ListView fx:id="tasksView"
                                  styleClass="tasks-view"
                                  HBox.hgrow="ALWAYS"/>

                        <!-- DETAILS: nimmt nur Platz im Container -->
                        <VBox fx:id="detailsPane"
                              spacing="10.0"
                              visible="false"
                              managed="false"
                              prefWidth="360.0"
                              minWidth="360.0"
                              maxWidth="360.0"
                              styleClass="details-pane">
                            <padding>
                                <Insets top="12" right="12" bottom="12" left="12"/>
                            </padding>

                            <HBox spacing="8.0" alignment="CENTER_LEFT">
                                <Label text="Details"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button text="✕" onAction="#onCloseDetails"/>
                            </HBox>

                            <Separator/>

                            <Label text="Todo"/>
                            <TextField fx:id="detailsTitle"
                                       promptText="Titel"
                                       maxWidth="Infinity"
                                       styleClass="details-input"/>

                            <Label text="Fälligkeit"/>
                            <DatePicker fx:id="detailsDueDate"
                                        maxWidth="Infinity"
                                        prefWidth="Infinity"
                                        styleClass="details-input"/>

                            <HBox spacing="8.0">
                                <Button text="Datum entfernen"
                                        onAction="#onClearDetailsDueDate"
                                        maxWidth="Infinity"
                                        HBox.hgrow="ALWAYS"/>

                                <Button text="Speichern"
                                        onAction="#onSaveDetails"
                                        maxWidth="Infinity"
                                        HBox.hgrow="ALWAYS"/>
                            </HBox>
                        </VBox>

                    </HBox>

                    <!-- Footer -->
                    <HBox spacing="8.0">
                        <Button fx:id="btnShowDone"
                                text="› Erledigt"
                                onAction="#onShowHistory"
                                maxWidth="Infinity"
                                HBox.hgrow="ALWAYS"
                                styleClass="tasks-footer-btn"/>

                        <Button fx:id="btnBack"
                                text="‹ Zurück"
                                onAction="#onBackFromHistory"
                                maxWidth="Infinity"
                                HBox.hgrow="ALWAYS"
                                styleClass="tasks-footer-btn"/>

                        <Button fx:id="btnClearDone"
                                text="Alle erledigten löschen"
                                onAction="#onClearDone"
                                maxWidth="Infinity"
                                HBox.hgrow="ALWAYS"
                                styleClass="tasks-footer-btn"/>
                    </HBox>

                </VBox>

                <!-- Eingabezeile -->
                <HBox spacing="0.0" styleClass="todo-input">
                    <padding>
                        <Insets top="6" right="6" bottom="6" left="6"/>
                    </padding>

                    <Button text="+" onAction="#onAddTask" styleClass="todo-input-btn"/>

                    <TextField fx:id="txtNewTaskTitle"
                               promptText="Neue Aufgabe..."
                               HBox.hgrow="ALWAYS"
                               styleClass="todo-input-field"/>

                    <DatePicker fx:id="dpNewTaskDueDate"
                                styleClass="todo-input-date"/>
                </HBox>

            </VBox>

        </SplitPane>
    </center>

</BorderPane>
